            <%= form.select :businessflow_id, Businessflow.all.collect {|p| [ p.name, p.id ] } %>
          </div>
        </div>

        <div class="p-1 form-group row">
          <div class="col-sm-2"><%= form.label :状态 %></div>
          <div class="col-sm-9">
              <%= form.select :status, Business.statuses.keys, prompt: "select a type"%>
