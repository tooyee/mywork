          <div class="col-sm-9 ">
            <!-- <input type="text" class="form-control" id="business_code"  placeholder=<%= form.text_field :code %> -->
            <%= form.text_field :code %>
          </div>
        </div>
        <div class="p-1 form-group row">
          <label for="business_name" class="col-sm-2 col-form-label">名称</label>
          <div class="col-sm-9">
            <!-- <input type="text" class="form-control" id="business_name"  placeholder=<%= form.text_field :name %> -->
            <%= form.text_field :name %>
          </div>
        </div>

        <!-- <div class="form-group">
